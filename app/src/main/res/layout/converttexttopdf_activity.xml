<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/convertTextPDF_activity_etName"
            android:layout_width="match_parent"
            android:hint="@string/name"
            android:background="@drawable/edittextstyle"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/convertTextPDF_activity_etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextstyle"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/email"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/convertTextPDF_activity_fb_addNew"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/colorAccent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:hint="@string/add_skills_hint"
            android:padding="10dp"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/convertTextPDF_activity_lv_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:weightSum="1">


        </LinearLayout>

        <Button
            android:id="@+id/convertTextPDF_activity_btSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:text="@string/convertToText_activity_btGeneratePDF"
            android:textColor="#fff" />
    </LinearLayout>
</ScrollView>
